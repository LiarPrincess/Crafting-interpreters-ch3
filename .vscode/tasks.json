{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "cmake --build ./Build/",
      "group": {
          "kind": "build",
          "isDefault": true
        },
      "problemMatcher": {
        "owner": "c",
        "fileLocation": "absolute",
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
    },
    {
      "label": "cmake",
      "type": "shell",
      "command": "cwd && cd ./Build && cmake ..",
      // "args": [
      //   "-G",
      //   "Unix Makefiles",
      //   "-DCMAKE_BUILD_TYPE=Debug",
      // ],
      "problemMatcher": {
        "owner": "cmake",
        "pattern": { "regexp": "" }
      },
    }
  ]
}
